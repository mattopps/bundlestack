<div class="main-content">

  <div class="question-show">
    <li class="question-show-q"><%= @question.title %></li>
  <%= render partial: 'vote', locals: {object: @question} %>
    <li class="question-show-content"><%= @question.content %></li>
    <li><%= link_to "edit question", edit_question_path(@question) %></li>
  </div>

  <div class="add-comment-link">
    <%= link_to 'Add Comment', new_question_comment_path(@question) %>
  </div>
  <br>
  <% if @question.comments.any? %>
    <div class="comments">
      <%=render partial: "comments/comment", locals: {comments: @question.comments}%>
    </div>
  <% end %>


  <%= link_to 'Add Answer', new_question_answer_path(@question) %>
  <!-- <render "answers/form" %> -->

  <section id="answers">
    <%= render @answers %>
  </section>

</div>
